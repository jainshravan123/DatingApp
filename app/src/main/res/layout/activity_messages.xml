<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:padding="8dp">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:background="?android:selectableItemBackground">



            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/txt_leave_number"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="16dp"
                android:textColor="@color/white"
                android:textSize="25sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txt_leave_type"
                android:textSize="20sp"
                android:text="Medical Leave"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/txt_leave_number"
                android:layout_toEndOf="@+id/txt_leave_number"
                android:textColor="#000"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Pending"
                android:id="@+id/txt_leave_status"
                android:layout_below="@+id/txt_leave_type"
                android:layout_toRightOf="@+id/txt_leave_number"
                android:layout_toEndOf="@+id/txt_leave_number" />




        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>